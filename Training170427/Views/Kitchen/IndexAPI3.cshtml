
@{
    ViewBag.Title = "IndexAPI3";
    Layout = "~/Views/Shared/_test.cshtml";
}

<h2>IndexAPI3</h2>
<div ng-if="orderitem != false" class="col-md-6" ng-repeat="data in orderitem">
    <div class="panel panel-primary ">
        <div class="panel-heading">
            <h3 class="panel-title">{{data.Status}}</h3>
        </div>
        <div class="panel-body">
            <table ng-if="data.OrderItem != false" class="table table-hover">
                <tr>
                    <th>Nama</th>
                    <th></th>
                    <th>Qty</th>
                    <th>Notes</th>
                    <th>Type</th>
                    <th></th>
                </tr>

                <tr ng-repeat="item in data.OrderItem">
                    <td>{{item.MenuName}}</td>
                    <td><span class="label label-primary">{{item.Time| date: 'HH:mm'}}</span></td>
                    <td>{{item.Qty}}</td>
                    <td>{{item.Notes}}</td>
                    <td>{{item.TypeName}}</td>
                    <td>
                        @*<button ng-if="data.Status == 'Order'" class="btn btn-danger" ng-click="CancelOrderItem(item.OrderItemID)">Cancel</button>*@
                        <button ng-if="data.Status == 'Order'" class="btn btn-primary" ng-click="CookOrderItem(item.OrderItemID)">Cook</button>
                        <button ng-if="data.Status == 'Cook'" class="btn btn-success" ng-click="FinishOrderItem(item.OrderItemID)">Done</button>
                    </td>
                </tr>
            </table>
            <center ng-if="data.OrderItem == false"><h2>Empty List</h2></center>
        </div>
    </div>

</div>


<div class="col-md-12 navbar-fixed-bottom" style="border:1px solid black">
    <div class="row" style="overflow-x:auto;white-space:nowrap;direction:rtl">
        <div ng-repeat="data in kitchenorder" class="col-md-2" style="display:inline-table;float:none; direction:initial;">
            <button  class="  btn btn-primary btn-lg btn-block" ng-click="GetOrderItemByOrderID(data.OrderID)"><i class="glyphicon glyphicon-cutlery "></i> {{data.TableName}}{{data.Name}} <span class="badge">{{data.OrderDate | date:'hh:MM'}}</span></button>
        </div>
    </div>
</div>