@model IEnumerable<Training170427.Models.AddOrder>
@{
    ViewBag.Title = "Index";
}

<h2>CheckOut</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    @if (item.TypeName == "Order")
                    {
                        <h3 class="panel-title">@item.TableName</h3>
                    }
                    else
                    {
                        <h3 class="panel-title">TakeAway</h3>
                    }

                </div>
                <div class="panel-body">
                    <a href="CheckOutOrder?id=@item.OrderID" class="btn btn-primary btn-block">CheckOut</a>
                </div>
            </div>
        </div>
    }
</div>

